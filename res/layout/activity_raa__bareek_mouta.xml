<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Raa_Bareek_mouta" >

    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <TableRow
            	android:id="@+id/tableRow1"
           		android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:stretchColumns="2" >

            <Button
                android:id="@+id/raa_zeer"
                style="@style/btnStyleArsenic"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="رِ" />

            <Button
                android:id="@+id/raa_zabr"
                style="@style/btnStyleGenoa"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="رَ" />

            <Button
                android:id="@+id/raa"
                style="@style/btnStyleArsenic"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="ر" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

 
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="13dp"
                android:stretchColumns="2" >

            <Button
                android:id="@+id/rijaalun"
                style="@style/btnStyleArsenic"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="رِجَالٗ" />

            <Button
                android:id="@+id/miryatun"
                style="@style/btnStyleGenoa"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:text="مِرْیَۃٌ" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="باریک را کی مشق"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                android:gravity="right"
                />

        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="1dp"
                android:stretchColumns="2" >

             <Button
                 android:id="@+id/sabiroon"
                 style="@style/btnStyleArsenic"
                 android:layout_width="90dp"
                 android:layout_height="60dp"
                 android:layout_weight="2"
                 android:background="@drawable/round_button"
                 android:text="وَالصَّابِرُوْنَ" />

             <Button
                 android:id="@+id/zuahiran"
                 style="@style/btnStyleGenoa"
                 android:layout_width="80dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:background="@drawable/round_button"
                 android:text="ظَاھِر ًا" />

             <Button
                 android:id="@+id/rashidoon"
                 style="@style/btnStyleGenoa"
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:layout_weight="1"
                 android:background="@drawable/round_button"
                 android:text="وَالرّٰشِدُوْنَ" />

             <TextView
                 android:id="@+id/TextView01"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="right"
                 android:text="موٹی را کی مشق"
                 android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>
        
          <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="1dp"
                android:stretchColumns="2" >
             
        </TableRow>
    </TableLayout>

</RelativeLayout>
